<MainView>
    BoxLayout:
        padding:50
        FloatLayout:
            Image:
                id: cameraView
                texture: root.image_texture
                height: 1180
                size_hint_y: 1
                width: 1180
                size_hint_x: 1
                Label:
                    id: labelObjDet
                    size_hint_y: None
                    height: 100
                    font_size:40
                    pos: 650,200
                    text:'{{object}} DETECTED'
            Image:
                id: trashyView
                source: "img/trashy.gif"
                pos: 300,300
        BoxLayout:
            orientation: 'vertical'
            spacing:20
            width: 250
            size_hint_x: None
            Button:
                text: 'Recycling in Singapore'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'infoView'
            Button:
                text: 'Help me!'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'helpView'
            Button:
                text: "What's this about?"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'aboutView'
            Button:
                id: btnExit
                text: "Quit"
                on_press: root.on_quit()
<InfoView>
    BoxLayout:
        RstDocument:
            source: 'data/recycling.rst'
        Button:
            text: 'Back to Main Screen'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'mainView'
<HelpView>
    BoxLayout:
        Button:
            text: 'Placeholder (Help)'
        Button:
            text: 'Back to Main Screen'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'mainView'
<AboutView>
    BoxLayout:
        RstDocument:
            source: 'data/about.rst'
        Button:
            text: 'Back to Main Screen'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'mainView'