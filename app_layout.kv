<MainView>
    spacing:10
    padding:20
    GridLayout:
        cols:2
        GridLayout:
            rows:2
            canvas:
                Color:
                    rgb: 10, 10, 10
            Label:
                id: labelObjDet
                size_hint_y: None
                height: 100
                font_size:30
                text:'{{object}} DETECTED'
        GridLayout:
            rows:3
            width: 250
            size_hint_x: None
            Button:
                text: 'Recycling in Singapore'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'infoView'
            Button:
                text: 'Help me!'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'helpView'
            Button:
                text: "What's this about?"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'aboutView'
<InfoView>
    BoxLayout:
        RstDocument:
            source: 'data/recycling.rst'
        Button:
            text: 'Back to Main Screen'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'mainView'
<HelpView>
    BoxLayout:
        Button:
            text: 'Placeholder (Help)'
        Button:
            text: 'Back to Main Screen'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'mainView'
<AboutView>
    BoxLayout:
        RstDocument:
            source: 'data/about.rst'
        Button:
            text: 'Back to Main Screen'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'mainView'